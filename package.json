{
  "name": "tailwindcss-mantine",
  "version": "0.0.0",
  "type": "module",
  "author": "Visualizeit",
  "description": "Integrate Mantine theme variables as Tailwind classes.",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "ci": "conc \"pnpm run build\" \"pnpm run format\" \"pnpm run lint\" \"pnpm run check-exports\"",
    "build": "tsup",
    "format": "prettier --write .",
    "lint": "eslint .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "prepare": "husky"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@epic-web/config": "^1.15.0",
    "@mantine/core": "^7.13.3",
    "@mantine/hooks": "^7.13.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "eslint": "^9.14.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.14",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.1.0"
  },
  "lint-staged": {
    "*.{md,html,css}": "prettier --write",
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "@mantine/core": "^7",
    "@mantine/hooks": "^7",
    "tailwindcss": "^3"
  }
}
